[Unit]
Description=Ilens assistive ai for the visually impaired
After=network.target

[Service]
User=root
EnvironmentFile=/home/ubuntu/projects/ilens-api/.env
WorkingDirectory=/home/ubuntu/projects/ilens-api/
ExecStart=/usr/bin/python /home/ubuntu/projects/ilens-api/start.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

