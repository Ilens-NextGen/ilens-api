server {
    listen 80;
    server_name allcanlearn.me ilens.allcanlearn.me;

    return 301 https://$host$request_uri;

}

server {
    listen 443 ssl;
    server_name allcanlearn.me ilens.allcanlearn.me;

    ssl_certificate /etc/letsencrypt/live/ilens.allcanlearn.me/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/ilens.allcanlearn.me/privkey.pem;

    # Add more SSL settings if needed

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    
    }

}

